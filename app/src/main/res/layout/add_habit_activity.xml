<?xml version="1.0" encoding="utf-8"?>
<!--添加习惯Activity的布局，两个Fragment-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--状态栏-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/clander_bg_top"
        android:layout_alignParentTop="true"/>

    <FrameLayout
        android:id="@+id/fragment_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/new_habit_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="f3.nsu.com.habit.fragment.NewHabitFragment">

        </fragment>
        <fragment
            android:id="@+id/add_habit_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="f3.nsu.com.habit.fragment.AddHabitFragment">

        </fragment>
    </FrameLayout>
</RelativeLayout>