<?xml version="1.0" encoding="utf-8"?>
<!--integralFragment-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/blue_card"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分商店"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_marginTop="18dp"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/add_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_insert"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:paddingTop="21dp"
            android:paddingRight="17dp"
            android:paddingLeft="17dp"
            android:paddingBottom="21dp"/>
        <TextView
            android:id="@+id/my_integral_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="91dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的积分"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:layout_marginTop="153dp"
            android:layout_centerHorizontal="true"/>
        <View
            android:layout_width="97dp"
            android:layout_height="0.5dp"
            android:background="#d2d2d2"
            android:layout_marginTop="171dp"
            android:layout_marginLeft="28dp"/>
        <View
            android:layout_width="97dp"
            android:layout_height="0.5dp"
            android:background="#d2d2d2"
            android:layout_marginTop="171dp"
            android:layout_marginRight="28dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/integral_ListView"
        android:layout_width="320dp"
        android:layout_height="352dp"
        android:background="@mipmap/card_bg"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:divider="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp">
    </ListView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:id="@+id/list_view_background_02"/>
</RelativeLayout>