<?xml version="1.0" encoding="utf-8"?>
<!--homeFragment-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--标题栏-->
    <RelativeLayout
        android:id="@+id/tab_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:background="@mipmap/clander_bg_top">
        <ImageButton
            android:id="@+id/calendar_ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_icon_calendar"
            android:layout_centerVertical="true"
            android:background="@null"
            android:layout_marginLeft="17dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主界面"
            android:textSize="21sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_insert"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginRight="21dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <!--日历按钮折叠部分-->
    <f3.nsu.com.habit.ui.ExpandLayout
        android:id="@+id/expandLayout"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:background="@mipmap/clander_bg"
        android:layout_below="@id/tab_relative">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="123456789"
            android:layout_centerInParent="true"/>

    </f3.nsu.com.habit.ui.ExpandLayout>
    <!--listView-->
    <ListView

        android:id="@+id/habit_ListView"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_below="@id/expandLayout"
        android:divider="#00000000"
        android:dividerHeight="10dp">

    </ListView>
</RelativeLayout>