<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_btn"
        android:layout_marginTop="117dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imageView_rencentage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/rencentage"/>

    <GridView
        android:id="@+id/gridView_week"
        android:layout_width="337.9dp"
        android:layout_height="21.3dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75.7dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="7"
        android:overScrollMode="never"
        android:scrollbars="none">

    </GridView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_edit"
            android:background="@null"
            android:layout_marginLeft="16.7dp"
            android:layout_marginTop="44dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主界面"
            android:textSize="21.3sp"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37.7dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_insert"
            android:background="@null"
            android:layout_marginRight="16dp"
            android:layout_marginTop="42.7dp"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/habit_ListView"
        android:layout_width="296.3dp"
        android:layout_height="75.7dp"
        android:layout_below="@id/imageView_rencentage"
        android:layout_centerHorizontal="true">

    </ListView>

</RelativeLayout>